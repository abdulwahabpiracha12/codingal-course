import random
import string
import tkinter as tk
from tkinter import messagebox
import os

# function to generate password
def generate_password(length=12):
    characters = string.ascii_letters + string.digits + string.punctuation
    return ''.join(random.choice(characters) for _ in range(length))

# function when button is clicked
def on_generate():
    try:
        length = int(entry_length.get())
    except ValueError:
        messagebox.showerror("Error", "Please enter a valid number")
        return

    password = generate_password(length)

    # write to file
    filename = "generated_password.txt"
    with open(filename, "w") as file:
        file.write("Your generated password is:\n")
        file.write(password)

    # show message
    messagebox.showinfo("Success", f"Password generated and saved in {filename}")

    # open file automatically
    os.startfile(filename)  # works on Windows
    # For Linux/Mac, replace with:
    # os.system(f"open {filename}")

# GUI setup
root = tk.Tk()
root.title("Random Password Generator")

tk.Label(root, text="Enter password length:").pack(pady=5)

entry_length = tk.Entry(root)
entry_length.pack(pady=5)

btn_generate = tk.Button(root, text="Generate Password", command=on_generate)
btn_generate.pack(pady=10)

root.mainloop()